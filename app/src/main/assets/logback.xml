<configuration>
    <appender name="LOGCAT" class="ch.qos.logback.classic.android.LogcatAppender">
        <tagEncoder>
            <pattern>%logger{0}</pattern>
        </tagEncoder>
        <encoder>
            <pattern>[%thread] %level %logger{36} - %msg%n%ex</pattern>
        </encoder>
    </appender>

    <logger name="com.zakhardev.todolist.todos_list.data.datasourse.FileStorage" level="DEBUG" />

    <root level="INFO">
        <appender-ref ref="LOGCAT"/>
    </root>
</configuration>
